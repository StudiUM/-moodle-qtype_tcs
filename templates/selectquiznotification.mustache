{{!
    @template mod_concordance/selectquiznotification

    Template for select quiz notification.

    Context variables required for this template:
    * html Html notifcation
    * classhidden 'hidden' or ''

    Example context (json):
    {
        "html": "<p>text<p>",
        "classhidden": "hidden"
    }
}}
<div id='quizselectnotification' class='{{classhidden}}'>
    {{{html}}}
</div>
{{#js}}
require(['jquery'], function($) {
    $('#id_cmorigin').on('change', function() {
        var quiz = $('#id_cmorigin :selected').val();
        if (quiz) {
            $('#quizselectnotification').show();
        } else {
            $('#quizselectnotification').hide();
        }
    });
});
{{/js}}
